<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.morning_evening"
    android:background="@color/pink"
    android:gravity="center">


        <ImageView
            android:id="@+id/iv_sunshine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/sunshine"
            android:padding="20dp"/>

        <Button
            android:id="@+id/bt_sunshine"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:text="أذكار الصباح"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_moon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/moon" />

        <Button
            android:id="@+id/bt_moon"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:text="أذكار المساء"
            android:textSize="20sp"
            android:textStyle="bold"/>

</LinearLayout>